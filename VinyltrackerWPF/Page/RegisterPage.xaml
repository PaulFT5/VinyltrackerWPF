<Window x:Class="VinyltrackerWPF.Page.RegisterPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VinyltrackerWPF.Page"
        mc:Ignorable="d"
        Title="RegisterPage" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Register" FontSize="24" FontWeight="Bold" 
               HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0"/>

        <StackPanel Name="LoginStackPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Username:" Margin="0,5,0,0" Foreground="Gray"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10" Height="30" VerticalContentAlignment="Center"/>
            
            <TextBlock Text="Email:" Margin="0,5,0,0" Foreground="Gray"/>
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,10" Height="30" VerticalContentAlignment="Center"/>

            <TextBlock Text="Password:" Margin="0,5,0,0" Foreground="Gray"/>
            <PasswordBox x:Name="PasswordBoxRegister" Margin="0,0,0,10" Height="30" VerticalContentAlignment="Center"/>

            <TextBlock Text="Confirm Password:" Margin="0,5,0,0" Foreground="Gray"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,10" Height="30" VerticalContentAlignment="Center"/>

            <Button Content="Register" Click="RegisterButton_Click" Margin="0,20" Height="35"/>
           
        </StackPanel>
    </Grid>
</Window>
