<Window x:Class="VinyltrackerWPF.Page.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Please log in" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0"/>

        <StackPanel Name="LoginStackPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Email:" Margin="0,5,0,0" Foreground="Gray"/>
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,10" Height="30" VerticalContentAlignment="Center"/>

            <TextBlock Text="Password:" Margin="0,5,0,0" Foreground="Gray"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10" Height="30" VerticalContentAlignment="Center"/>

            <Button Content="Login" Click="LoginButton_Click" Margin="0,20" Height="35"/>
            <Button Content="Register" Click="RegisterButton_Click" Margin="0,0,0,10" Height="35"/>
        </StackPanel>
    </Grid>
</Window>