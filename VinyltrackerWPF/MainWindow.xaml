<Window x:Class="VinyltrackerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vinyl Tracker" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#333333">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="20,0,0,0">
                <Button Content="Home"       Width="80" Height="30" Margin="0,0,20,0"/>
                <Button Content="Stats" Width="80" Height="30" Click="Test_Click"/>
            </StackPanel>

            <TextBlock Grid.Column="1" 
               Text="Vinyl Tracker" 
               Foreground="White" 
               FontSize="20" FontWeight="Bold"
               HorizontalAlignment="Center" 
               VerticalAlignment="Center"/>

            <Button Grid.Column="2" 
            Content="Account" 
            Width="80" Height="30" 
            Margin="0,0,20,0" 
            Click="Logout_Click"/>

        </Grid>

        <Frame x:Name="MainFrame" 
           Grid.Row="1" 
           Background="LightGray" 
           NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>